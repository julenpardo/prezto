#
# Defines aliases.
#
# Authors:
#   Julen Pardo <julen.pardo@outlook.es>
#
# Some aliases are taken from https://github.com/robbyrussell/oh-my-zsh/blob/master/plugins/common-aliases/common-aliases.plugin.zsh
#

# Apt
alias apt-up='sudo apt-get update'
alias apt-in='sudo apt-get update && sudo apt-get install -y'
alias apt-re='sudo apt-get remove'
alias apt-se='sudo apt-cache search'

# Files, directories, etc.
alias mkdir='mkdir -pv'
alias md='mkdir -pv'
alias t='tail -f'
alias ln='ln -s'
alias jsonf='python -m json.tool'
alias lll='ls -al'
alias untar='tar -zxvf'
alias cgit='cd ~/git'
alias ...='cd ../..'
alias ....='cd ../../..'
alias back='cd $OLDPWD'

# Git
alias g='git'
alias gpm='git push origin -u master'
alias gp='git push origin -u'
alias gl='git pull'
alias gd='git diff'

# Network
alias ping='ping -c 4'

# Disk
alias dud='du -d 1 -h'
alias duf='du -sh *'

# Find
alias fif='find -type f -name'
alias fid='find -type d -name'

# Misc
alias c='clear'
alias tmuxx='unset TMUX && tmux'
alias zshreload='source ~/.zshrc'
